@model IEnumerable<EntityLayer.Concrete.Author>

<div class="tab-pane" id="settings">

    <form class="form-horizontal" method="post" action="/User/UpdateUserProfile">
        @foreach (var item in Model)
        {

            <input type="hidden" name="AuthorId" value="@item.AuthorId" />

            <div class="form-group row">

                <label for="inputName" class="col-sm-2 col-form-label">İsim</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputName" name="AuthorName" value="@item.AuthorName">

                </div>

            </div>

            <div class="form-group row">

                <label for="inputEmail" class="col-sm-2 col-form-label">Mail</label>

                <div class="col-sm-10">

                    <input type="email" class="form-control" id="inputEmail" name="AuthorMail" value="@item.Mail">

                </div>

            </div>

            <div class="form-group row">

                <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputName2" name="AuthorTitle" value="@item.AuthorTitle">

                </div>

            </div>

            <div class="form-group row">

                <label for="inputExperience" class="col-sm-2 col-form-label">Yetenek</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputExperience" name="AboutShort" value="@item.AboutShort" />

                </div>

            </div>

            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Telefon</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputSkills" name="AuthorPhone" value="@item.PhoneNumber">

                </div>

            </div>
            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Resim</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputSkills" name="AuthorImage" value="@item.AuthorImage">

                </div>

            </div>
            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputSkills" name="AuthorPassword" value="@item.Password">

                </div>

            </div>
            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Şifre Tekrar</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputSkills" value="@item.Password">

                </div>

            </div>
            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Hakkımda</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputSkills" value="@item.AuthorAbout">

                </div>

            </div>
            <div class="form-group row">

                <div class="offset-sm-2 col-sm-10">

                    <div class="checkbox">

                        <label>

                            <input type="checkbox">  Şifremi Değiştirmek İstiyorum.

                        </label>

                    </div>

                </div>

            </div>

            <div class="form-group row">

                <div class="offset-sm-2 col-sm-10">

                    <button type="submit" class="btn btn-danger">Kaydet</button>

                </div>

            </div>


        }
    </form>
</div>