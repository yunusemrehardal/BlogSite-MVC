@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/Templates/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white">Sizler için yüzlerce konular yazan yazarlarımızı ve ekibimizi daha yakından tanımak istermisiniz?</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 order-md-2">
                <img src="/Templates/miniblog/images/img_1.jpg" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-5 mr-auto order-md-1">
                <h2>Biz kimiz ?</h2>
                @foreach (var item in Model)
                {
                    <p>@item.AboutContent1</p>
                }

                <ul class="ul-check list-unstyled success">
                    <li>Her gün 10 yeni blog yazısı</li>
                    <li>Onbeşten fazla kategori</li>
                    <li>Günlük 45.000 okunma</li>
                    <li>21 Farklı dinamik yazar</li>
                    <li>Güçlü sosyal ekip</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@Html.Action("MeetTheTeam", "About")

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="~/Templates/miniblog/images/hero_1.jpg" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-5 ml-auto">
                <h2>Neler Yapıyoruz ?</h2>
                @foreach (var item in Model)
                {
                    <p>@item.AboutContent2</p>
                }
                <ul class="ul-check list-unstyled success">
                    <li>Güvenilir bilgi</li>
                    <li>Dünyanın her tarafından yazılar</li>
                    <li>Dinamik teknoloji çağını ayak uydurma</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@Html.Action("Footer", "About")