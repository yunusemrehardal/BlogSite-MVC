@model IEnumerable<EntityLayer.Concrete.Comment>

@{

    ViewBag.Title = "AdminCommentListTrue";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="card-body">
                    @foreach (var item in Model)
                    {


                        <!-- Post -->

                        <div class="post">

                            <div class="user-block">

                                <img class="img-circle img-bordered-sm" src="/Templates/adminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">

                                <span class="username">

                                    <a href="#">@item.UserName - @item.Blog.BlogTitle</a>

                                </span>

                                <span class="description">@item.CommentDate.ToString("dd-MMM-yyyy")</span>

                            </div>

                            <!-- /.user-block -->

                            <p>

                                @item.CommentText

                            </p>

                            <p>

                                <span class="float-right">

                                    <a href="/Comment/StatusChangeToFalse/@item.CommentId" class="link-black text-sm">

                                        <i class="far fa-comments mr-1"></i> Yorumu Kaldır
                                    </a>
                                </span>

                            </p>

                            <input class="form-control form-control-sm" type="text" placeholder="Type a comment">

                        </div>
                    }
                </div>

            </div>

        </div><!-- /.card-body -->



    </section>

</body>

</html>